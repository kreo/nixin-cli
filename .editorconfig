# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# Set default charset
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space

# 4 space indentation
[*.{php,phtml,html,json,xml,js}]
indent_size = 4

# Indentation override for all JS, CSS, SCSS, SASS, STYL
[*.{css,scss,sass,styl}]
indent_size = 2
